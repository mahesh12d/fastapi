{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "installCommand": "cd client && npm install",
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "routes": [
    {
      "src": "/((?!api/).*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "client/src/**": {
      "maxDuration": 30
    }
  }
}